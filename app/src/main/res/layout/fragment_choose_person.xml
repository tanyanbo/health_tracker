<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".choosePerson.ChoosePersonFragment">

        <ImageView
            android:id="@+id/imgHeart"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/person_spinner"
            app:layout_constraintEnd_toEndOf="@id/person_spinner"
            app:layout_constraintStart_toStartOf="@id/person_spinner"
            app:srcCompat="@drawable/heart_line" />

        <Spinner
            android:id="@+id/person_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.298" />

        <Button
            android:id="@+id/buttonGoToData"
            android:layout_marginTop="101dp"
            android:text="@string/go_to_data"
            style="@style/ButtonStyle"
            app:layout_constraintEnd_toEndOf="@id/person_spinner"
            app:layout_constraintStart_toStartOf="@id/person_spinner"
            app:layout_constraintTop_toBottomOf="@+id/person_spinner"
            app:backgroundTint="@null"/>

<!--        <Button-->
<!--            android:id="@+id/buttonAddPerson"-->
<!--            android:text="@string/add_person"-->
<!--            android:layout_marginTop="160dp"-->
<!--            style="@style/ButtonStyle"-->
<!--            app:backgroundTint="@null"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/person_spinner"-->
<!--            app:layout_constraintStart_toStartOf="@+id/person_spinner"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/person_spinner" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>